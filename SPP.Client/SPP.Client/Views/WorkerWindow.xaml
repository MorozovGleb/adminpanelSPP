<Window x:Class="SPP.Client.Views.WorkerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SPP.Client.Views"
        mc:Ignorable="d"
        Title="Работник — СПП" Height="500" Width="900"
        >

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Приветствие -->
        <TextBlock x:Name="HeaderText"
   FontSize="20"
   FontWeight="Bold"
   Margin="10"/>
        <!-- Кнопки -->
        <StackPanel Grid.Row="2"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Width="300">

            <Button Content="Расписание"
                    Height="45"
                    Click="ScheduleButton_Click"/>

            <Button Content="Просмотр отработанных часов"
                    Height="45"
                    Click="HoursButton_Click"/>
            <Button Content="Мои обучения"
        Height="45"
        Click="LearnButton_Click"/>

        </StackPanel>
       
    </Grid>
</Window>
