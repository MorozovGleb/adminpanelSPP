<Window x:Class="SPP.Client.Views.Instructor.AddVerificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SPP.Client.Views.Instructor"
        mc:Ignorable="d"
        Title="AddVerificationWindow" Height="450" Width="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ID поле (если нужно) -->
        <TextBlock Grid.Row="0" Text="ID"/>
        <TextBox Grid.Row="1" x:Name="IdBox" Margin="0,5,0,10"/>

        <!-- Имя -->
        <TextBlock Grid.Row="2" Text="ID Пользователя"/>
        <TextBox Grid.Row="3" x:Name="IdUserBox" Margin="0,5,0,10"/>

        <!-- Фамилия -->
        <TextBlock Grid.Row="4" Text="Позиция"/>
        <ComboBox Grid.Row="5" x:Name="VerificationBox" Margin="0,5,0,10"/> 

        <!-- Телефон -->
        <TextBlock Grid.Row="6" Text="Дата"/>
        <DatePicker Grid.Row="7" x:Name="DatePicker" Margin="0,5,0,10"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="14"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Сохранить"
                    Width="100"
                    Margin="0,0,10,0"
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding ElementName=PasswordBox}" Click="Button_Click"/>
            <Button Content="Отмена"
                    Width="100"
                    Command="{Binding CancelCommand}" Click="Button_Click_1"/>
        </StackPanel>
    </Grid>
</Window>