<Window x:Class="SPP.Client.Views.Instructor.VerificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Верификации — Вкусно и точка"
        Height="550"
        Width="950"
        Background="#F7F9F8"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>

        <!-- Кнопка действия -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF7A00"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E66F00"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#CC6200"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F3F5F4"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        </Style>

        <!-- Заголовки колонок -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#00A651"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Hover строки -->
        <Style TargetType="DataGridRow">
            <Setter Property="Height" Value="45"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8F5EE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid Margin="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="149*"/>
            <ColumnDefinition Width="141*"/>
        </Grid.ColumnDefinitions>

        <Border Background="White"
                CornerRadius="15"
                Padding="30" Margin="0,-25,0,-23" Grid.ColumnSpan="2">

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Grid.Row="0"
                           Text="Бланк обученности"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#111111"
                           HorizontalAlignment="Center"/>

                <!-- Зеленая линия -->
                <Rectangle Grid.Row="1"
                           Height="4"
                           Width="120"
                           Fill="#00A651"
                           Margin="0,10,0,20"
                           HorizontalAlignment="Center"/>

                <!-- Контент -->
                <Grid Grid.Row="2">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <!-- Таблица -->
                        <RowDefinition Height="Auto"/>
                        <!-- Кнопка -->
                    </Grid.RowDefinitions>

                    <!-- Таблица -->
                    <DataGrid x:Name="ConfirmationGrid"
                              Grid.Row="0"
                              AutoGenerateColumns="True"
                              IsReadOnly="True"
                              RowEditEnding="ConfirmationGrid_RowEditEnding"/>

                    <!-- Кнопка по центру -->
                    <Button x:Name="EditButton"
                            Grid.Row="1"
                            Content="Добавить запись"
                            Style="{StaticResource ActionButtonStyle}"
                            HorizontalAlignment="Center"
                            Width="200"
                            Height="45"
                            Click="EditButton_Click"
                            Margin="0,10,0,0"/>

                </Grid>

            </Grid>

        </Border>

    </Grid>
</Window>