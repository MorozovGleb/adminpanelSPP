<Window x:Class="SPP.Client.Views.Manager.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SPP.Client.Views.Manager"
        mc:Ignorable="d"
       Title="Добавление пользователя"
        Height="450"
        Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ID поле (если нужно) -->
        <TextBlock Grid.Row="0" Text="ID"/>
        <TextBox Grid.Row="1" Text="{Binding Id}" Margin="0,5,0,10" IsEnabled="False"/>

        <!-- Имя -->
        <TextBlock Grid.Row="2" Text="Имя"/>
        <TextBox Grid.Row="3" Text="{Binding Name}" Margin="0,5,0,10"/>

        <!-- Фамилия -->
        <TextBlock Grid.Row="4" Text="Фамилия"/>
        <TextBox Grid.Row="5" Text="{Binding Surname}" Margin="0,5,0,10"/>

        <!-- Телефон -->
        <TextBlock Grid.Row="6" Text="Телефон"/>
        <TextBox Grid.Row="7" Text="{Binding PhoneNumber}" Margin="0,5,0,10"/>

        <!-- Логин -->
        <TextBlock Grid.Row="8" Text="Логин"/>
        <TextBox Grid.Row="9" Text="{Binding Login}" Margin="0,5,0,10"/>

        <!-- Пароль -->
        <TextBlock Grid.Row="10" Text="Пароль"/>
        <PasswordBox Grid.Row="11"
                     x:Name="PasswordBox"
                     Margin="0,5,0,10"/>

        <!-- ID роли -->
        <TextBlock Grid.Row="12" Text="ID роли"/>
        <TextBox Grid.Row="13" Text="{Binding RoleId}" Margin="0,5,0,10"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="14"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Сохранить"
                    Width="100"
                    Margin="0,0,10,0"
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding ElementName=PasswordBox}" Click="Button_Click"/>
            <Button Content="Отмена"
                    Width="100"
                    Command="{Binding CancelCommand}" Click="Button_Click_1"/>
        </StackPanel>
    </Grid>
</Window>