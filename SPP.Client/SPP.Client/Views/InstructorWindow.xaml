<Window x:Class="SPP.Client.Views.InstructorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Инструктор — Вкусно и точка"
        Height="550"
        Width="950"
        WindowStartupLocation="CenterScreen"
        Background="#F7F9F8">

    <Window.Resources>

        <!-- Фирменная кнопка -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF7A00"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,10,0,0"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>

                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E66F00"/>
                            </Trigger>

                            <!-- Press -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#CC6200"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>

        <Border Background="White"
                CornerRadius="15"
                Padding="40"
                Width="602"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel>

                <!-- Заголовок -->
                <TextBlock x:Name="HeaderText"
                           Text="Панель инструктора"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#111111"
                           HorizontalAlignment="Center"/>

                <!-- Зеленый акцент -->
                <Rectangle Height="4"
                           Width="90"
                           Fill="#00A651"
                           Margin="0,10,0,30"
                           HorizontalAlignment="Center"/>

                <!-- Кнопки -->
                <Button Content="Бланк обученности"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="VerificationButton_Click"/>

                <Button Content="Расписание"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="ScheduleButton_Click"/>

                <Button Content="Просмотр отработанных часов"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="HoursButton_Click"/>

            </StackPanel>

        </Border>

    </Grid>
</Window>