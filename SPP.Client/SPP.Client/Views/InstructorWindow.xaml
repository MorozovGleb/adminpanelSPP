<Window x:Class="SPP.Client.Views.InstructorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Инструктор — СПП"
        Height="500"
        Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Приветствие -->
        <TextBlock x:Name="HeaderText"
           FontSize="20"
           FontWeight="Bold"
           Margin="10"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Width="300">

            <Button Content="Бланк обученности"
                    Height="45"
                    Click="VerificationButton_Click"/>

            <Button Content="Расписание"
                    Height="45"
                    Click="ScheduleButton_Click"/>

            <Button Content="Просмотр отработанных часов"
                    Height="45"
                    Click="HoursButton_Click"/>

        </StackPanel>

    </Grid>
</Window>
